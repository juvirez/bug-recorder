{
  "manifest_version": 2,

  "name": "Bug Recorder",
  "description": "Website Issue Reporting Tool",
  "version": "1.0.1",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": ["debugger", "tabCapture"]
}
